<Alloy>
	<Window id="winSearch" class="container" onClick="winSearch_onClick">
		<Label id="lblPodLocation">Pod Location</Label>
		<View id="vGears" onClick="vGears_onClick">
			<ImageView id="ivGears"></ImageView>	
		</View>
		<View id="vLogout" onClick="vLogout_onClick">
			<Button>Logout</Button>
		</View>
		<ScrollView id="vManualSearch">
			<Button id="btnQr" title="Use QR Reader" onClick="btnQr_onClick"></Button>
			<TextField id="txtFirstName" hintText="First Name" />
			<TextField id="txtLastName" hintText="Last Name" />
			<TextField id="txtPhoneNumber" hintText="Phone Number" />
			<Button id="btnSearch" title="SEARCH" onClick="btnSearch_onClick"></Button>
		</ScrollView>
	</Window>	
</Alloy>